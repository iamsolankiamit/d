<% if @design.layout_type == "b" %>
<div class="width-100 height-100 absolute"></div>
<% elsif @design.layout_type == "a"
	 %>
	 <div class="width-100 height-75 left absolute">
	 <div class="width-75 height-75 left absolute"></div>
	 <div class="width-25 height-75 right absolute">
	 	<% unless @design.photos.nil? %>
	 		<% if @design.slider == true %>
	 		<div id="imageSlider">
				<% @design.photos.each do |photo| %>
					<%= image_tag photo.image.url(:original) , width: "100%" , height: "100%" %>
				<% end %>
				
			</div>
			<% else %>
				<%= image_tag @design.photos.first.image.url(:original), width: "100%", height: "100%" %>
	 		<% end %>
	 	<% end %>
	 </div>
	 </div>
	 <div class="width-100 height-25 absolute bottom">
	 <% if @design.slider == true %>
	 <div id="textSlider" style="height:100px">
	 	<% @design.photos.each do |photo| %>
	 		<h4 class="slideText text-center" style="font-size:50px; font-weight:bold"><%= photo.title %></h4>
	 	<% end %>
	 </div>
	 <% end %>
	 <% if @design.ticker == true %>
	 <div>
	 <div class="marquee" style=" height: 100px;width:100%; background: red;"><p style=" color: white; font-weight:bold; font-size:50px;margin:10px 0px 0px 0px;"><%= @design.ticker_text %></p> </div>
	 </div>
	 <% end %>
	 </div>
<% end %>

<style>
.bottom {
	bottom: 0;
}
	.relative {
		position: relative;
	}
	.width-75 {
		width:75%;
	}
	.textSlider{

	}
	.slideText {
		color: white;
		width: 100%;
		position: absolute;

	}
	body{
		background: black;
	}
	.width-25 {
		width: 25%;
	}
	.height-75 {
		height:75%;
	}
	.width-100 {
		width:100%;
	}
	.height-100 {
		height:100%;
	}
	.width-50 {
		width:50%;
	}
	.height-50 {
		height:50%;
	}
	.absolute {
		position: absolute;
	}
	.left {
		left:0;
	}
	.right {
		right: 0;
	}
</style>

