<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="list-group">
        <a href="/" class="list-group-item">Playlist</a>
        <a href="/groups" class="list-group-item">Groups</a>
        <a href="/pis" class="list-group-item active">Manage Signages</a>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="panel panel-default">
        <div class="panel-heading"><h4 class="text-center">Manage Signages</h4></div>
        <div class="panel-body">
        <div class="pis-container">
        <% @pis.each do |pi| %>
          <div class="link-split" data-id="<%= pi.id %>">
          <div class="row">
            <div class="col-sm-9"><h5><%= pi.name.titlecase %> </h5></div>
            <div class="col-sm-3 text-right"> <%= link_to "Delete Signage", pi_path(pi), method: :delete, data: { disable_with: "Wait..." }, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", remote: true %></div>
          </div>
          </div>
          <% end %>
          </div>
          <div class="link-split text-center">
            <a data-target="#signageModal" data-toggle="modal" class="text-center btn btn-primary">Add Signage</a>
          </div>
        </div>
        <!-- <div class="panel-footer"><button class="btn btn-success">Save</button></div> -->
      </div>
    </div>
  </div>
</div>



<!-- Group Modal -->
<div class="modal fade" id="signageModal" tabindex="-1" role="dialog" aria-labelledby="signageModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="signageModalLabel">Add a new Signage</h4>
      </div>
        <%= form_for :pi, url: "/pis", method: "post", remote: true do |f| %>
      <div class="modal-body">
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name , class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :uid %>
        <%= f.text_field :uid , class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :group %>
        <%= collection_select(:pi, :group_id, Group.all, :id, :name, {:prompt => 'Please select Group'}, {class: "form-control"}) %>
    </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" value="save" class="btn btn-primary">Save changes</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .link-split {
    border-bottom: 1px solid #eee;
    padding:10px 20px 20px 20px;
    margin:0px -15px;
  }
</style>