<p id="notice"><%= notice %></p>

<h1>Listing Pis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uid</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pis.each do |pi| %>
      <tr>
        <td><%= pi.name %></td>
        <td><%= pi.uid %></td>
        <td><%= pi.group_id %></td>
        <td><%= link_to 'Show', pi %></td>
        <td><%= link_to 'Edit', edit_pi_path(pi) %></td>
        <td><%= link_to 'Destroy', pi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

